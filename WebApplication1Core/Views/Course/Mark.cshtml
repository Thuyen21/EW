@model Dictionary<string, List<string>>
@{
    ViewBag.Title = "Mark";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="margin-top: 30px">Mark</h2>

<table class="table" style="margin-top: 50px; margin-bottom:50px">
    <thead class="thead-dark">
        <tr>
            <th>
                Student
            </th>
            <th>
                Email
            </th>
            <th>
                Mark Status
            </th>
            <th>
                Comment
            </th>
            <th>Marking</th>
        </tr>
    </thead>
    
  
    @if (Model != null)
    {
        foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Key)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Value[0])
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Value[1])
    </td>
    <td>
        @if (item.Value.Count > 1 && item.Value.Last() != null)
        {
            @Html.DisplayFor(modelItem => item.Value[2])
        }

    </td>
    <td>
        @*@Html.ActionLink("Marking", "Marking", new { id = item.Key })*@
        @Html.ActionLink("Mark", "Marking", null, new { id = item.Key }, new { @class = "btn btn-primary btn-md", @style = " border-radius: 10px" })

    </td>
</tr>
        }
    }


</table>