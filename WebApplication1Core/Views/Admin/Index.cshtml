@model IEnumerable<SignUpModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="margin-top: 30px">Admin Index</h2>

<head>
    <link rel="stylesheet"
          href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
          integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p"
          crossOrigin="anonymous" />
    @*<link href="@Url.Content("~/Content/table.css")" rel="stylesheet" type="text/css" />*@
</head>

<p style="margin-top: 30px; margin-bottom:20px">
    Create Account:
    @*<button type="button" class="btn btn-secondary" href="Admin/CreateAdmin">Admin</button>*@
    @Html.ActionLink("Admin", "CreateAdmin" , null, new { @class = "btn btn-primary btn-large", @style = " border-radius: 10px" })  
    @Html.ActionLink("Student", "CreateStudent" , null, new { @class = "btn btn-primary btn-large", @style = " border-radius: 10px" })  
    @Html.ActionLink("Marketing Coordinator", "CreateMarketingCoordinator", null, new { @class = "btn btn-primary btn-large", @style = " border-radius: 10px" })  
    @Html.ActionLink("Marketing Manager", "CreateMarketingManager", null, new { @class = "btn btn-primary btn-large", @style = " border-radius: 10px" })  
    @Html.ActionLink("Guest", "CreateGuest", null, new { @class = "btn btn-primary btn-large", @style = " border-radius: 10px" })
</p>
<table class="table" style="margin-top: 50px; margin-bottom:50px">
    <thead class="thead-dark">
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.id)*@
                ID
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Name)*@
                Name
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Email)*@
                Email
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Password)*@
                Password
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.role)*@
                Role
            </th>
            <!--<th>-->
                @*@Html.DisplayNameFor(model => model.enable)*@
                <!--Active Status
            </th>-->
            <th>
                Action
            </th>
            <th></th>
        </tr>
    </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.Password, new { @type = "datetime-local", @readonly = "readonly" })*@
                    <input type="password" value="@item.Password" id="myInput" readonly>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.role)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.enable)
                </td>*@
                
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.id, role = item.role }, new {@class = "btn btn-danger btn-md" })
                    
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id, role = item.role }, new { @class = "btn btn-primary btn-md" })
                </td>
            </tr>
        }

</table>
