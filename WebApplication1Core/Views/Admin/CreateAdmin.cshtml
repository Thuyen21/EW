@model             SignUpModel

@{
    ViewBag.Title = "Create Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>Create Admin</h2>*@


<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet"
          href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
          integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p"
          crossOrigin="anonymous" />
    <link href="@Url.Content("~/Content/login.css")" rel="stylesheet" type="text/css" />

</head>

<style>
    * {
        box-sizing: border-box;
    }

    .zoom {
        padding: 0px;
        transition: transform .1s;
        width: 360px;
        height: 50.44px;
        margin: 0 auto;
        border-radius: 20px;
    }

        .zoom:hover {
            -ms-transform: scale(1.2); /* IE 9 */
            -webkit-transform: scale(1.2); /* Safari 3-8 */
            transform: scale(1.2);
        }
</style>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="signup col-md-auto">
            <div class="signup-container">
                <div class="tab">
                    <div class="tab-item is-active">Create Account</div>
                </div>
                <h1 class="signup-heading">Create Admin</h1>
                <form class="signup-form" autocomplete="off">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <hr />

                    <div class="form-group">
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        <label for="name" class="form-label">Full name</label>
                        <input type="text" id="name" class="form-input zoom" placeholder="Ex: John Doe" required name="name" style="border-radius:10px; padding:10px">
                    </div>
                    <div class="form-group">
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        <label for="email" class="form-label">Email</label>
                        <input type="email" id="email" class="form-input zoom" placeholder="Ex: johndoe@email.com" required name="email" style="border-radius:10px; padding:10px">
                    </div>
                    <div class="form-group">
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        <label for="password" class="form-label">Password</label>
                        <input type="password" id="password" class="form-input zoom" placeholder="************" required name="password" style="border-radius:10px; padding:10px">
                    </div>


                    <input type="radio" id="enable" name="enable" value="true" checked />






                    <div class="form-group signup-term">
                        By clicking you agree with our <a href="#" class="signup-term-link">Term of use.</a>
                    </div>
                    <button type="submit" class="btn btn--gradient zoom">Create Admin Account</button>
                </form>
            </div>
            <img src="https://thumbs.dreamstime.com/b/admin-message-working-office-table-background-93379017.jpg" alt="" class="signup-image">
        </div>




    </div>
}




