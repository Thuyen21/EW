@using Microsoft.AspNet.Identity

@using System.Security.Claims;

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
    {
        
        @Html.AntiForgeryToken()
<ul class="nav navbar-nav">





    @switch ((((ClaimsIdentity)User.Identity).FindFirstValue("Role")))
    {
        case "Admin":
    <li class="nav-item">
        @Html.ActionLink("Hello " + (((ClaimsIdentity)User.Identity).FindFirstValue("Name")), "Index", "Admin", routeValues: null, htmlAttributes: new { @class = "nav-link" })
        @Html.ActionLink("Index Course", "IndexCourse", "Admin", routeValues: null, htmlAttributes: new { @class = "nav-link" })

    </li>
            break;
        case "Student":
            <li class="nav-item">
                @Html.ActionLink("Hello " + (((ClaimsIdentity)User.Identity).FindFirstValue("Name")), "Index", "Student", routeValues: null, htmlAttributes: new { @class = "nav-link" })
            </li>
            break;
        case "Marketing Coordinator":
            <li class="nav-item">
                @Html.ActionLink("Hello " + (((ClaimsIdentity)User.Identity).FindFirstValue("Name")), "Index", "Course", routeValues: null, htmlAttributes: new { @class = "nav-link" })
            </li>
            break;
        case "Marketing Manager":
            <li class="nav-item">
                @Html.ActionLink("Hello " + (((ClaimsIdentity)User.Identity).FindFirstValue("Name")), "Index", "MarketingManager", routeValues: null, htmlAttributes: new { @class = "nav-link" })
            </li>
            break;
        case "Guest":
            <li class="nav-item">
                @Html.ActionLink("Hello " + (((ClaimsIdentity)User.Identity).FindFirstValue("Name")), "Index", "Guest", routeValues: null, htmlAttributes: new { @class = "nav-link" })
            </li>
            break;
        default:
            break;
    }
    <li class="nav-item">
        @Html.ActionLink("Log out", "Logoff", "Account", routeValues: null, htmlAttributes: new { id = "logoutLink", @class = "nav-link" })
    </li>
</ul> }
}
else
{
    <ul class="nav navbar-nav">

        <li class="nav-item">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>
    </ul>}
