@model Dictionary<string, List<string>>
@{
    ViewBag.Title = "View Mark";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ var coordinator = ViewData["coordinator"] as string;}
<h2>View Mark</h2>
@Html.ActionLink("Back to index", "Index")
<table class="table">
    <tr>
        <th>
            Student
        </th>
        <th>
            Mark
        </th>
        <th>
            Comment
        </th>
        <th>
            Submissions
        </th>
    </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Key)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value[0])
                </td>
                <td>
                    @if (item.Value.Count > 1 && item.Value.Last() != null)
                    {
                        @Html.DisplayFor(modelItem => item.Value[1])
                    }

                </td>
                <td>
                    @Html.ActionLink("View submissions", "viewSubmissions", new { coordinator = coordinator, Student = item.Key })
                </td>
            </tr>
        }
    }


</table>