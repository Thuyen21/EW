@model Dictionary<string, List<string>>
@{
    ViewBag.Title = "Mark";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ var coordinator = ViewData["coordinator"] as string;}
<h2 style="margin-top: 30px; margin-bottom: 20px">View Mark</h2>
@*@Html.ActionLink("Back to index", "Index")*@
<div>
    @Html.ActionLink("< Back to index", "Index", null, new { @class = "btn btn-primary btn-large", @style = " border-radius: 10px" })
</div>

<table class="table" style="margin-top: 50px; margin-bottom:50px">
    <thead class="thead-dark">
        <tr>
            <th>
                Student
            </th>
            <th>
                Email
            </th>
            <th>
                Mark
            </th>
            <th>
                Comment
            </th>
            <th>
                View Submissions
            </th>
        </tr>
    </thead>
    
    @if (Model != null)
    {
        foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Key)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Value[0])
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Value[1])
    </td>
    <td>
        @if (item.Value.Count > 1 && item.Value.Last() != null)
        {
            @Html.DisplayFor(modelItem => item.Value[2])
        }

    </td>
    <td>

        <button class="btn btn-outline-primary btn-md" style="border-radius: 10px">@Html.ActionLink("View submissions", "viewSubmissions", new { coordinator = coordinator, Student = item.Key })</button>
    </td>
</tr>
        }
    }


</table>